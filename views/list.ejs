<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div id="flex-box">
        <div class="box" >
            <marquee >
                <h1>To do list</h1>
            </marquee>
        </div>
        <div class="box todo-box">
            <% ejes.forEach(function(items){ %>
                <form action="/delete" method="POST" class="item">
                        <input type="checkbox" class="check-box" name="checkbox1"  value="<%= items._id %>" onchange="this.form.submit()">
                        <label for="strikeCheckbox" class="todo"><%= items.name %></label>
                </form>
            <% }); %>
            <form action="/" method="POST">
                <input type="text" name="ele1" placeholder="Enter the task">
                <button type="submit">+</button>
            </form>
        
        </div>
    </div>
</body>
</html>